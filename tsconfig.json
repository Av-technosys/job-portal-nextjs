{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    // ##########
    "noImplicitAny": false,   // ðŸ‘ˆ allow "any"
    "strictNullChecks": false, // ðŸ‘ˆ allow nulls
    "strict": false,
    // ##########
    // "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/admin/question/page.tsx", "src/pages/admin/question/[id]"],
  "exclude": ["node_modules"]
}
